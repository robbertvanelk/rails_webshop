<div class="page-content">
	<div class="new-products overview-products">
		<p>Onze nieuwste producten</p>
		<% @productsnew.each do |p| %>
			<div class="product">
					<p><%= link_to p.name, product_index_path(:id => p.id) %></p>
					<p>€ <%= p.price %><%= button_to 'In winkel wagen', shopping_cart_path(:product_id => p.id), :method => 'POST' %></p>
					<%= image_tag p.photo %>
				</div> 
		<% end %>
	</div>
	<div class="top-products overview-products">
		<p>Je ziet hier de drie populairste producten van onze webshop</p>
		<% @products.each do |p| %>
			<div class="product">
					<p><%= link_to p.name, product_index_path(:id => p.id) %></p>
					<p>€ <%= p.price %><%= button_to 'In winkel wagen', shopping_cart_path(:product_id => p.id), :method => 'POST' %></p>
					<%= image_tag p.photo %>
				</div> 
		<% end %>
	</div>
</div>


